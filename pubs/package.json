{
  "name": "advent-of-code-2025-pubs",
  "version": "1.0.0",
  "description": "Write ups of my advent of code 2025 solutions using 11ty static site builder",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm:watch:*\"",
    "watch:11ty": "eleventy --serve --port=8081",
    "watch:scss": "sass _includes/stylesheets:_site/assets/styles --watch",
    "build": "rimraf _site && mkdirp _site && cpy \"../target/doc/**/*\" \"./_site\" && sass -Inode_modules/foundation-sites/scss --quiet-deps _includes/stylesheets:_site/assets/styles && eleventy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamioftea/advent-of-code-2025/pubs"
  },
  "author": "Jeff Horton <jeff@goblinoid.co.uk>",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "concurrently": "^9.2.1",
    "feather-icons": "^4.29.2",
    "foundation-sites": "^6.9.0",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-deflist": "^3.0.0",
    "markdown-it-mathjax": "^2.0.0",
    "sass": "^1.94.2"
  },
  "devDependencies": {
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.3",
    "rimraf": "^6.1.2",
    "mkdirp": "^3.0.1",
    "cpy-cli": "^6.0.0"
  }
}
